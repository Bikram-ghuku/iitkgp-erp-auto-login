{
  "manifest_version": 2,
  "name": "ERP Auto Login - IITKGP",
  "version": "3.0",
  "author": "Siddhartha Sarkar",
  "description": "Auto Login to erp.iitkgp.ac.in for IITKGPians by IITKGPian",
  "homepage_url": "https://github.com/siddsarkar/iitkgp-erp-auto-login-extension",
  "icons": {
    "256": "icons/icon.png"
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "ERP Auto Login",
    "default_popup": "options/options.html",
    "theme_icons": [
      {
        "light": "icons/icon.png",
        "dark": "icons/icon_dark.png",
        "size": 256
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://erp.iitkgp.ac.in/SSOAdministration/*"],
      "js": ["content_scripts/content.js"]
    }
  ],
  "permissions": [
    "storage",
    "https://erp.iitkgp.ac.in/SSOAdministration/getSecurityQues.htm"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{fa21e38a-41b3-4891-8f6b-8ba837e2df65}"
    }
  }
}
