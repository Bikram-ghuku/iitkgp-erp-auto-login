{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "baseUrl": "src",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "addon"]
}

