{
    "private": true,
    "webExt": {
        "sourceDir": "firefox/"
    },
    "scripts": {
        "fix": "eslint ./src --fix",
        "dev:chrome": "concurrently --kill-others \"npx tailwindcss -i ./style.css -o ./src/pages/output.css --watch\" \"npx webpack --config-name chrome --mode development --watch\"",
        "dev:firefox": "concurrently --kill-others \"npx tailwindcss -i ./style.css -o ./src/pages/output.css --watch\" \"npx webpack --config-name firefox --mode development --watch\"",
        "build:chrome": "npx tailwindcss -i ./style.css -o ./src/pages/output.css --minify && webpack --config-name chrome --mode production",
        "build:firefox": "npx tailwindcss -i ./style.css -o ./src/pages/output.css --minify && webpack --config-name firefox --mode production"
    },
    "keywords": [
        "browser-addon",
        "erp-auto-login-iitkgp"
    ],
    "author": "Siddhartha Sarkar",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "latest",
        "copy-webpack-plugin": "latest",
        "eslint": "latest",
        "eslint-config-xo": "latest",
        "tailwindcss": "latest",
        "webpack": "latest",
        "webpack-cli": "latest"
    },
    "dependencies": {
        "@tailwindcss/forms": "latest",
        "postcss": "latest"
    }
}
